{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="relative min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 bg-gray-500 bg-no-repeat bg-cover relative items-center"
         style="background-image: url('">
        <div class="absolute bg-black opacity-60 inset-0 z-0"></div>
        <div class="max-w-md w-full space-y-8 p-10 bg-white rounded-xl z-10">
            <div class="text-center">
                <h2 class="mt-6 text-3xl font-bold text-gray-900">
                    Réinitialisez votre mot de passe
                </h2>
                <p class="mt-2 text-sm text-gray-600">Entrez votre nouveau mot de passe</p>
            </div>
            {{ form_start(resetForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="relative">
                <label for="plainPassword" class="text-sm font-bold text-gray-700 tracking-wide">Nouveau mot de passe</label>
                {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'w-full text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500', 'placeholder': 'Nouveau mot de passe'}}) }}
                <label for="plainPassword" class="text-sm font-bold text-gray-700 tracking-wide">Confirmer le mot de passe</label>
                {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'w-full text-base py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500', 'placeholder': 'Confirmer le mot de passe'}}) }}
            </div>
            <div>
                <button type="submit" class="w-full flex justify-center bg-indigo-500 text-gray-100 p-4 rounded-full tracking-wide font-semibold focus:outline-none focus:shadow-outline hover:bg-indigo-600 shadow-lg cursor-pointer transition ease-in duration-300">
                    Réinitialiser le mot de passe
                </button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
