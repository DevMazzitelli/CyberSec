{% extends 'base.html.twig' %}
{% block title %}
    Modification de l'adresse mail
{% endblock %}

{% block body %}
    {{ form_errors(form) }}

    {{ form_start(form) }}
    <div class="grid grid-cols-1 mt-4 sm:grid-cols-2 pt-16">
        <div class="px-6">
            {{ form_label(form.rue, 'Rue') }}
            {{ form_widget(form.rue, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'} }) }}
        </div>

        <div class="px-6">
            {{ form_label(form.ville, 'Ville') }}
            {{ form_widget(form.ville, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'} }) }}
        </div>

        <div class="px-6">
            {{ form_label(form.codePostal, 'Code Postal') }}
            {{ form_widget(form.codePostal, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'} }) }}
        </div>

        <div class="px-6">
            {{ form_label(form.pays, 'Pays') }}
            {{ form_widget(form.pays, { 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5'} }) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}



