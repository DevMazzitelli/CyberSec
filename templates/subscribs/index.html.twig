                                <script type="text/javascript">
                                    var stripe = Stripe('{{ stripe_public_key }}');

                                    function createCheckoutSession(url) {
                                        return fetch(url, {
                                            method: 'POST',
                                            headers: {
                                                'Content-Type': 'application/json',
                                            },
                                        })
                                            .then(function (response) {
                                                if (!response.ok) {
                                                    throw new Error('Network response was not ok ' + response.statusText);
                                                }
                                                return response.json();
                                            })
                                            .then(function (session) {
                                                return stripe.redirectToCheckout({ sessionId: session.id });
                                            })
                                            .then(function (result) {
                                                if (result.error) {
                                                    alert(result.error.message);
                                                }
                                            })
                                            .catch(function (error) {
                                                console.error('Error:', error);
                                                alert('An error occurred. Please try again.');
                                            });
                                    }

                                    document.getElementById('checkout-button-1').addEventListener('click', function () {
                                        createCheckoutSession('/abonnement_Un');
                                    });

                                    document.getElementById('checkout-button-2').addEventListener('click', function () {
                                        createCheckoutSession('/abonnement_Deux');
                                    });

